{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES2023", "dom"],
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strictNullChecks": true
  },
  "include": ["src"]
}
